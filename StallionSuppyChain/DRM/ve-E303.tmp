                        , row["ITEMDESCRIPTION2"].ToString(), row["ITEMSPEC1"].ToString(), row["ITEMSPEC2"].ToString(), row["ITEMSPEC3"].ToString(), row["TranLineNo"].ToString()
                        );


                    }

                }
            }

            dataGridView1.Columns[17].Visible = false;


